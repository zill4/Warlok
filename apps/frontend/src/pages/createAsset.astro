---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Create 3D Model">
  <div class="create-asset">
    <div class="content">
      <div class="step-counter">1/3</div>

      <div class="form-group">
        <label for="modelName">MODEL NAME</label>
        <input type="text" id="modelName" value="" class="input-field" />
      </div>

      <div class="upload-section">
        <div class="small-upload">
          <label>UPLOAD IMAGE</label>
          <div class="upload-box">
            <div class="upload-content">
              <span class="plus">+</span>
              <p class="upload-text">Drag and Drop, Paste, or<br />Upload Image directly.</p>
            </div>
          </div>
        </div>

        <div class="preview-area">
          <div class="threejs-container">
            <div class="view-toggle">
              <button class="active">2D</button>
              <button>3D</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .create-asset {
    min-height: calc(100vh - var(--header-height));
    color: white;
  }

  .content {
    max-width: 1200px;
    margin: 2rem auto;
    padding: 0 2rem;
  }

  .step-counter {
    font-size: 1.2rem;
    margin-bottom: 2rem;
  }

  .form-group {
    margin-bottom: 2rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: bold;
  }

  .input-field {
    background: #D9D9D9;
    border: none;
    padding: 0.5rem;
    width: 100%;
    max-width: 300px;
    font-size: 1rem;
  }

  .upload-section {
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: 2rem;
  }

  .upload-box {
    border: 1px solid white;
    aspect-ratio: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #000;
    margin-top: 0.5rem;
  }

  .upload-content {
    text-align: center;
  }

  .plus {
    font-size: 2rem;
    display: block;
    margin-bottom: 1rem;
  }

  .upload-text {
    font-size: 0.8rem;
    color: #888;
  }

  .threejs-container {
    border: 1px solid white;
    aspect-ratio: 16/9;
    position: relative;
    margin-top: 0.5rem;
  }

  .view-toggle {
    position: absolute;
    bottom: 1rem;
    right: 1rem;
    display: flex;
    gap: 0.5rem;
  }

  .view-toggle button {
    background: none;
    border: none;
    color: white;
    padding: 0.25rem 0.5rem;
    cursor: pointer;
  }

  .view-toggle button.active {
    background: white;
    color: black;
  }

  label {
    text-transform: uppercase;
    font-weight: bold;
  }
</style> 